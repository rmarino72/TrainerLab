<script>
    function init()
    {
        iAmAdmin();

        ajaxCall(USER_FULL, 'GET', null, gotUsers);
    }

    function gotUsers(data) {
        if (!data.Outcome) {
            alertify.error(data.Message);
            return;
        }
        data.Data.forEach(e => {
            e.BirthDate = italianFormatDate(new Date(e.BirthDate));
        });

        fillDataTable('dataTable', data.Data, null, true);
    }

</script>